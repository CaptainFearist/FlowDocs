<Window x:Class="File_Manager.AccountingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отдел бухгалтерии"
        WindowStartupLocation="CenterScreen"
        Height="640" Width="1000"
        MinWidth="970" MinHeight="640"
        Icon="/Images/FlowDocs.ico">

    <Grid Background="#F5EFE6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="195"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="3"
            Background="#DAD7CD"
            Height="50">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" VerticalAlignment="Center" 
                        Margin="10,0">
                <TextBlock Text="{Binding FirstName}"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="#2D3142" />
                <TextBlock Text=" "
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding LastName}"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="#2D3142" />

                <Button x:Name="LogoutButton"
                        Style="{StaticResource LogoutButtonStyle}"
                        Click="LogoutButton_Click"
                        Margin="15,0,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                Background="#DAD7CD" 
                Height="50"/>

        <StackPanel Grid.Row="1" Grid.Column="0" 
                    Margin="5">

            <Button x:Name="ContactButton" 
                    Content="Связь с командой" 
                    FontFamily="Tahoma"
                    Margin="5" 
                    Width="165" Height="50" 
                    FontSize="16" 
                    Style="{StaticResource MenuButton}"
                    Click="ContactButton_Click"/>

        </StackPanel>

        <GridSplitter Grid.Row="1" Grid.Column="1"
                      Width="5" 
                      HorizontalAlignment="Stretch"
                      Background="Gray" 
                      VerticalAlignment="Stretch"
                      IsEnabled="False"/>

        <ScrollViewer Grid.Row="1" Grid.Column="2" 
                      Margin="5">

            <UniformGrid x:Name="DepartmentsPanel" 
                     Columns="1" 
                     Margin="5">

                <Border BorderThickness="1" 
                    BorderBrush="Gray"
                    CornerRadius="8" 
                    Padding="10" Margin="10">

                    <StackPanel>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="228" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Бухгалтерия" 
                                       FontFamily="Tahoma"
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,0,15,0" 
                                       VerticalAlignment="Center" Height="27"/>

                            <TextBox x:Name="SearchBox"
                                     Width="228"
                                     Height="25"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource ModernSearch}"
                                     TextChanged="SearchBox_TextChanged"
                                     GotFocus="Search_GotFocus"
                                     LostFocus="Search_LostFocus" Grid.Column="1"/>

                            <TextBlock x:Name="SearchHint" 
                                   Text="Поиск..." 
                                   FontFamily="Tahoma"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" 
                                   Foreground="Gray" 
                                   IsHitTestVisible="False" 
                                   Visibility="Visible" 
                                   Margin="10,0,0,0" 
                                   Grid.Column="1" Height="16" Width="42" />
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                Margin="0,0,0,10">

                            <Button Content="Добавить файл" 
                                    FontFamily="Tahoma"
                                Width="120" Height="30" 
                                Margin="0,0,10,0" 
                                Click="AddFileButton_Click" 
                                Style="{StaticResource AddDelete}"/>

                            <Button Content="Удалить файл" 
                                    FontFamily="Tahoma"
                                Width="108" Height="30" 
                                Margin="0,0,10,0" 
                                Click="DeleteFileButton_Click" 
                                Style="{StaticResource AddDelete}"/>

                            <Button Content="Скачать файл" 
                                    FontFamily="Tahoma"
                                Width="108" Height="30" 
                                Margin="0,0,10,0" 
                                Click="DownloadFileButton_Click" 
                                Style="{StaticResource AddDelete}"/>

                        </StackPanel>

                        <ListView x:Name="FilesListView" 
                                  ItemsSource="{Binding Files}" 
                                  MouseDoubleClick="FilesListView_MouseDoubleClick"
                                  Background="{StaticResource ListView.Background}" 
                                  AlternationCount="2"
                                  Margin="0,10,0,0" 
                                  Height="350"
                                  VerticalAlignment="Stretch"
                                  AllowDrop="True"
                                  PreviewDragEnter="FilesListView_PreviewDragEnter"
                                  PreviewDragOver="FilesListView_PreviewDragOver"
                                  PreviewDrop="FilesListView_PreviewDrop">

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Название файла"
                                                    DisplayMemberBinding="{Binding FileName}"
                                                    Width="360"/>
                                    <GridViewColumn Header="Когда загружен" 
                                                    DisplayMemberBinding="{Binding UploadDate}" 
                                                    Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
