<Window x:Class="File_Manager.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Добавление пользователя"
        Height="450" Width="365"
        Icon="/Images/FlowDocs.ico"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <DockPanel Background="#F5EFE6">
        <Grid DockPanel.Dock="Top"
              Background="#b8b5ad"
              Height="30"
              MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" 
                        Grid.Column="0" 
                        Margin="10,5">
                <Image Source="/Images/FlowDocs.ico"
                       Height="20" Width="20" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"/>
                <TextBlock Text="Добавление пользователя"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Margin="10,0">

                <Button Style="{StaticResource CloseButtonStyle}"
                        Click="CloseWindow"
                        Margin="5"/>
            </StackPanel>
        </Grid>

        <Border BorderBrush="#b8b5ad" BorderThickness="3,0,3,3">
            <Grid>
                <StackPanel Margin="10">
                    <TextBlock Text="Имя:" 
                               FontFamily="Tahoma"/>
                    <TextBox x:Name="FirstNameTextBox"
                             Margin="0,0,0,10"
                             Style="{StaticResource TextPass}"/>
                    <TextBlock Text="Фамилия:" 
                               FontFamily="Tahoma"/>
                    <TextBox x:Name="LastNameTextBox"
                             Margin="0,0,0,10"
                             Style="{StaticResource TextPass}"/>
                    <TextBlock Text="Email:" 
                               FontFamily="Tahoma"/>
                    <TextBox x:Name="EmailTextBox" 
                             Margin="0,0,0,10"
                             Style="{StaticResource TextPass}"/>
                    <TextBlock Text="Имя пользователя:" 
                               FontFamily="Tahoma"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Margin="0,0,0,10"
                             Style="{StaticResource TextPass}"/>
                    <TextBlock Text="Пароль:" 
                               FontFamily="Tahoma"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Margin="0,0,0,10"
                                 Style="{StaticResource TextPassp}"/>
                    <TextBlock Text="Отдел:" FontFamily="Tahoma"/>
                    <ComboBox x:Name="DepartmentComboBox"
          Margin="0,0,0,10"
          Style="{StaticResource ComboPass}"
          ItemContainerStyle="{StaticResource ComboPassItem}"
          DisplayMemberPath="DepartmentName"
          SelectedValuePath="DepartmentId"/>
                    <Button Content="Добавить" 
                            FontFamily="Tahoma"
                            Width="110" 
                            Height="50"
                            Foreground="Black"
                            Click="AddButton_Click" 
                            Style="{StaticResource MenuButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </DockPanel>
</Window>
