<Window x:Class="File_Manager.Adminka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Администрирование"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="1000"
        MinHeight="520" MinWidth="820"
        Icon="/Images/FlowDocs.ico">

    <Grid Background="#F5EFE6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Background="#DAD7CD" 
                    Height="50">
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="10,0">
                    <TextBlock x:Name="AdminNameTextBlock" 
                               FontSize="16" Foreground="#2D3142" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.ColumnSpan="2" 
                    Background="#DAD7CD"
                    Height="50"/>

            <StackPanel Grid.Column="0" Grid.Row="1" Margin="5,10,0,10">
                <Button x:Name="AddUserButton" 
                        Content="Добавить сотрудника" 
                        Margin="5"
                        Width="175" Height="50"
                        FontSize="16"
                        Click="AddUserButton_Click"
                        Style="{StaticResource MenuButton}"
                        Foreground="#2D3142"/>

                <Button x:Name="ViewAllUsersButton" 
                        Content="Сотрудники" 
                        Margin="5"
                        Width="175" Height="50"
                        FontSize="16"
                        Click="ViewAllUsersButton_Click"
                        Style="{StaticResource MenuButton}"
                        Foreground="#2D3142"/>
            </StackPanel>

            <UniformGrid x:Name="DepartmentsPanel" 
                         Grid.Row="1" Grid.Column="1" 
                         Margin="10,10,10,10" 
                         Columns="2"/>

        </Grid>
    </Grid>
</Window>
