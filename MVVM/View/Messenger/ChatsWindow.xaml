<Window x:Class="File_Manager.MVVM.View.Messenger.ChatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_Manager.MVVM.View.Messenger"
        mc:Ignorable="d"
        Title="Чаты"
        Icon="/Images/FlowDocs.ico"
        Height="800" Width="700"
        MinHeight="550" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Background="#F5EFE6">
        <Grid DockPanel.Dock="Top"
              Background="#b8b5ad"
              Height="30"
              MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" 
                        Grid.Column="0" 
                        Margin="10,5">
                <Image Source="/Images/FlowDocs.ico"
                       Height="20" Width="20" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"/>
                <TextBlock Text="Чаты"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Margin="10,0">
                <Button Style="{StaticResource MinimizeButtonStyle}"
                        Click="MinimizeWindow"
                        Margin="5"/>
                <Button Style="{StaticResource MaximizeRestoreButtonStyle}"
                        Click="MaximizeRestoreWindow"
                        Margin="5"/>
                <Button Style="{StaticResource CloseButtonStyle}"
                        Click="CloseWindow"
                        Margin="5"/>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#EAE2D7">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="3"
                          Direction="315"
                          Opacity="0.3"
                          BlurRadius="5"/>
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Background="#DAD7CD">
                    <TextBox x:Name="SearchChatsBox"
                             Margin="10"
                             Height="30"
                             Padding="10,5"
                             BorderThickness="1"
                             BorderBrush="#D1D1D1"
                             Background="#F0F0F0"
                             VerticalContentAlignment="Center"
                             Style="{StaticResource ModernSearch}"
                             TextChanged="SearchBox_TextChanged"
                             GotFocus="Search_GotFocus"
                             LostFocus="Search_LostFocus"/>
                    <TextBlock x:Name="SearchHint"
                               Text="Поиск..."
                               FontFamily="Tahoma"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               Margin="20,0,0,0"
                               Height="16" Width="42" />
                </Grid>

                <ListView x:Name="ChatsListView"
                          Grid.Row="1"
                          BorderThickness="0"
                          SelectionChanged="ChatsListView_SelectionChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent"
                          ItemContainerStyle="{StaticResource CustomListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Border Width="40" Height="40" CornerRadius="20">
                                    <Border.Background>
                                        <ImageBrush Stretch="UniformToFill">
                                            <ImageBrush.ImageSource>
                                                <Binding Path="ImagePath">
                                                    <Binding.FallbackValue>
                                                        <BitmapImage UriSource="pack://application:,,,/Images/default_user.png"/>
                                                    </Binding.FallbackValue>
                                                    <Binding.TargetNullValue>
                                                        <BitmapImage UriSource="pack://application:,,,/Images/default_user.png"/>
                                                    </Binding.TargetNullValue>
                                                </Binding>
                                            </ImageBrush.ImageSource>
                                        </ImageBrush>
                                    </Border.Background>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding FirstName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastName}"
                                               FontSize="14"
                                               Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="1" Background="#E8E8E8"/>

            <Grid Grid.Column="2" Background="#F5EFE6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ChatTitle"
                           Text="Выберите чат"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="15"/>

                <ListBox x:Name="MessagesList"
                         Grid.Row="1"
                         Margin="10"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"></ListBox>

                <Grid Grid.Row="2" Margin="10">
                    <Border Background="#FAF9F6"
                            BorderThickness="1"
                            BorderBrush="#D1D1D1"
                            CornerRadius="20"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="MessageInput"
                                     Grid.Column="0"
                                     MinHeight="40"
                                     MaxHeight="100"
                                     VerticalAlignment="Center"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Padding="10"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     KeyDown="MessageInput_KeyDown"
                                     TextChanged="MessageInput_TextChanged"
                                     Style="{StaticResource MessageInputTextBoxStyle}"/>
                            <TextBlock x:Name="MessageHint"
                                       Text="Написать сообщение..."
                                       FontFamily="Tahoma"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Margin="12,0,0,0"
                                       Height="16" Width="135" />
                            <Button Grid.Column="1"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Click="SendMessage_Click"
                                    Style="{StaticResource SendMessageButtonStyle}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>