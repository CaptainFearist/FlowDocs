<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProfileButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ToolTip" Value="Профиль"/>

        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#6F8C9E"/>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="ellipse"
                                 Fill="{TemplateBinding Background}"
                                 Stroke="#578181"
                                 StrokeThickness="2"/>

                        <TextBlock Text="👤"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2D3142"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,-2,0,0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ellipse" Property="Fill" Value="#637A8E"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ellipse" Property="Fill" Value="#536A7C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>