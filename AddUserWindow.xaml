<Window x:Class="File_Manager.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Добавление пользователя"
        Height="450" Width="365">
    <Grid Background="#cbce86">
        <StackPanel Margin="10">
            <TextBlock Text="Имя:" 
                       FontFamily="Tahoma"/>
            <TextBox x:Name="FirstNameTextBox"
                     Margin="0,0,0,10"
                     Style="{StaticResource TextPass}"/>
            <TextBlock Text="Фамилия:" 
                       FontFamily="Tahoma"/>
            <TextBox x:Name="LastNameTextBox"
                     Margin="0,0,0,10"
                     Style="{StaticResource TextPass}"/>
            <TextBlock Text="Email:" 
                       FontFamily="Tahoma"/>
            <TextBox x:Name="EmailTextBox" 
                     Margin="0,0,0,10"
                     Style="{StaticResource TextPass}"/>
            <TextBlock Text="Имя пользователя:" 
                       FontFamily="Tahoma"/>
            <TextBox x:Name="UsernameTextBox" 
                     Margin="0,0,0,10"
                     Style="{StaticResource TextPass}"/>
            <TextBlock Text="Пароль:" 
                       FontFamily="Tahoma"/>
            <PasswordBox x:Name="PasswordBox" 
                         Margin="0,0,0,10"
                         Style="{StaticResource TextPassp}"/>
            <TextBlock Text="ID Отдела:" 
                       FontFamily="Tahoma"/>
            <TextBox x:Name="DepartmentIdTextBox" 
                     Margin="0,0,0,10"
                     Style="{StaticResource TextPass}"/>
            <Button Content="Добавить" 
                    FontFamily="Tahoma"
                    Width="110" 
                    Height="50"
                    Foreground="Black"
                    Click="AddButton_Click" 
                    Style="{StaticResource MenuButton}"/>
        </StackPanel>
    </Grid>
</Window>
